               />

           <TextView
               android:id="@+id/appwidget_text2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/widget_default_textview_text" />

           <TextView
               android:id="@+id/appwidget_text3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/widget_default_textview_text" />
   -->


    </LinearLayout>

</FrameLayout>