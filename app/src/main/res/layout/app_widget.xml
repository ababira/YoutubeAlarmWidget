<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/appwidget_image1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/widget_imageview_background"
                android:src="@mipmap/ic_launcher"

                />


            <TextView
                android:id="@+id/appwidget_text_cancel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FF0000"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#FFFFFF" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/button_round_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:text="b1" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="39"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/appwidget_text1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="16.25"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="▲" />


                <TextView
                    android:id="@+id/appwidget_text_minutes"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="27.5"
                    android:background="@drawable/widget_imageview_background"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffff"

                    />


                <TextView
                    android:id="@+id/appwidget_text2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="16.25"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="▼" />


            </LinearLayout>


            <Button
                android:id="@+id/button_round_30"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:text="b2" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="39"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/appwidget_text3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="16.25"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="▲" />


                <TextView
                    android:id="@+id/appwidget_text_hours"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="27.5"
                    android:background="@drawable/widget_imageview_background"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffff"

                    />


                <TextView
                    android:id="@+id/appwidget_text4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="16.25"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="▼" />


            </LinearLayout>


            <Button
                android:id="@+id/button_round_60"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:text="b3" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>